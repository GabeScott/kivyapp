WindowManager:
	MainWindow:
		id:screen1
		name: 'screen1'
	SecondWindow:
		id:screen2
		name:'screen2'




<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    outline_color: 0,0,0,1





<MainWindow>:
	mygrid:mygrid

	MyGrid:
		name:"mygrid"
		id: mygrid
		timer:"timer"
		numplayers:numplayers
		curplayer:curplayer
		playername:playername
		displaynumplayers:displaynumplayers
		displayplayernames:displayplayernames
		totalpointslabel:totalpointslabel
		playbutton:playbutton
		mygridfloat:mygridfloat
		targetgame:targetgame
		zombiegame:zombiegame

		firstplacename:firstplacename
		firstplacepoints:firstplacepoints
		firstplacedate:firstplacedate
		
		secondplacename:secondplacename
		secondplacepoints:secondplacepoints
		secondplacedate:secondplacedate

		thirdplacename:thirdplacename
		thirdplacepoints:thirdplacepoints
		thirdplacedate:thirdplacedate

		fourthplacename:fourthplacename
		fourthplacepoints:fourthplacepoints
		fourthplacedate:fourthplacedate

		fifthplacename:fifthplacename
		fifthplacepoints:fifthplacepoints
		fifthplacedate:fifthplacedate


		FloatLayout:
			id:mygridfloat
			size: root.width, root.height
			size_hint: .6,.3

			GridLayout:
				size_hint: .1,.1
				cols:1
				pos_hint:{"x": .8, "y":.45}
				Label:
					text:"Total Points:"
					id:totalpointslabel
					valign: "bottom"
					halign:"right"

			GridLayout:
				cols:1
				size_hint:.25,.08
				pos_hint:{"x":.375, "y":.92}
				Label:
					text:"All-Time High Scores"


			GridLayout:
				size_hint: .8, .3
				pos_hint:{"x":.1, "y":.65}
				cols:4
				Label:
					text:"Place"
				Label:
					text:"Name"
				Label:
					text:"Points"
				Label:
					text:"Date"
				Label:
					text:"1"
				Label:
					id:firstplacename
					text:"Name"
				Label:
					id:firstplacepoints
					text:"Points"
				Label:
					id:firstplacedate
					text:"Date"
				Label:
					text:"2"
				Label:
					id:secondplacename
					text:"Name"
				Label:
					id:secondplacepoints
					text:"Points"
				Label:
					id:secondplacedate
					text:"Date"
				Label:
					text:"3"
				Label:
					id:thirdplacename
					text:"Name"
				Label:
					id:thirdplacepoints
					text:"Points"
				Label:
					id:thirdplacedate
					text:"Date"
				Label:
					text:"4"
				Label:
					id:fourthplacename
					text:"Name"
				Label:
					id:fourthplacepoints
					text:"Points"
				Label:
					id:fourthplacedate
					text:"Date"
				Label:
					text:"5"
				Label:
					id:fifthplacename
					text:"Name"
				Label:
					id:fifthplacepoints
					text:"Points"
				Label:
					id:fifthplacedate
					text:"Date"



			GridLayout:
				size_hint: .65,.05
				cols:3
				pos_hint: {"x":.01, "y":.35}
				BackgroundLabel:
					size_hint: .3, 1
					text: "How Many Players?"
					background_color: .4,.4,.4,1
				TextInput:		
					size_hint: .3, 1	
					id: numplayers		
					multiline: False
					write_tab: False
					on_text_validate: mygrid.set_num_players()
				Button:
					size_hint: .1, 1
					text: "Enter"
					on_press: mygrid.set_num_players()
			GridLayout:
				size_hint: .65,.05
				cols:3
				pos_hint: {"x":.01, "y":.28}
				BackgroundLabel:
					id: curplayer
					text: "Player"
					text_size: self.width, None
					halign: "center"
					size_hint: .3, 1
					height: self.texture_size[1]
					background_color: .4,.4,.4,1
				TextInput:			
					size_hint: .3, 1	
					id: playername
					multiline: False
					write_tab: False
					on_text_validate: mygrid.submit_player_name()
				Button:
					size_hint: .1, 1
					text: "Add"
					on_press: mygrid.submit_player_name()	



			GridLayout:
				size_hint: .5,.1
				cols:2
				pos_hint:{"x": .01, "y":.45}
				BackgroundLabel:
					text_size: self.width, None
					pos_hint: {"x":.01, "y":0}
					text: "Number of Players: "
					id: displaynumplayers
					halign: "left"
					size_hint: .5, None
				BackgroundLabel:
					pos_hint: {"x":0, "y":0}
					text_size: self.width, None
					text: "Players: "
					id: displayplayernames
					halign: "left"
					size_hint: .5, None	

			GridLayout:
				size_hint: .2,.1
				cols:1
				pos_hint:{"x": .4, "y":.1}
				Button:
					id:playbutton
					text:"Play!"
					on_press: mygrid.check_timer_status()
					on_release:
						app.root.go_to_game_screen()

			GridLayout:
				size_hint: .2,.1
				cols:4
				pos_hint:{"x":.4,"y":.02}
				CheckBox:
					id:targetgame
					group: 'gametype'
				CheckBoxLabel:
					on_press:targetgame._do_press()
					text:"Target"
				CheckBox:
					id:zombiegame
					group: 'gametype'
					active:True
				CheckBoxLabel:
					text:"Zombie"
					on_press:zombiegame._do_press()




<SecondWindow>:
	myscoregrid:myscoregrid
	MyScoreGrid:
		name: 'myscoregrid'
		id: myscoregrid
		size_hint: 1, 1

		GridLayout:
			cols:2
			size_hint:.3, .07
			pos_hint:{"x":.70, "y":.7 }
			Button:
				text:"Miss"
				on_press: myscoregrid.add_zero_points()	

			Button:
				size_hint:.5,1
				text:"End Game"
				on_press: myscoregrid.update_overall_points()
				on_release:
                    app.root.current = "screen1"
                    root.manager.transition.direction = "right"
            				
